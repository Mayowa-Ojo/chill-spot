
{{!-- display chill spot cards --}}
<section class="show-spots-grid">
  <div class="ui centered grid container">
    {{#each spots}}
    <div class="five wide column">
      <div class="ui card">
        <div class="content">
          <div class="right floated meta">{{parseTimeFrame this.createdAt}}</div>
          <img class="ui avatar image" src="/assets/images/avatar-2027367_640.png"> {{this.user.username}}
        </div>
        <div class="image">
          <img src="/assets/images/spot-cafe-3537801_640.jpg">
        </div>
        <div class="content">
          <span class="right floated">
            <i class="heart outline like icon"></i>
            {{this.likes}} likes
          </span>
          <i class="comment icon"></i>
          {{commentsLength this.comments}} comments
        </div>
        <div class="content">
          <a class="header">{{this.name}}</a>
          <div class="meta">
            <span class="right floated">{{this.price_range}}</span>
            <span class="date">{{this.location}}</span>
          </div>
          <div class="description">
            {{this.description}}
          </div>
        </div>
        <div class="extra content">
          <input type="hidden" name="id" value="{{this.id}}">
          <div class="negative ui mini button" tabindex="0" data-content="Remove from favorites" data-variation="tiny">Remove</div>
          <div class="ui animated basic green mini button right floated" tabindex="0" data-content="View this chill spot" data-variation="tiny">
            <a href="/spots/{{this.id}}">
              <div class="visible content">View</div>
              <div class="hidden content">
                <i class="info circle icon"></i>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>