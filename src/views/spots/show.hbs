<div class="main-wrapper">
  <section class="spot-container">
    <div class="ui centered grid container">
      <div class="six wide column">
        <div class="ui segment">
          {{#if error}}
          <div class="top-header">              
            <h1 class="ui brown header">{{spot.name}}</h1>            
            <span>
              <a href="/spots/{{spot.id}}/edit"><i class="edit outline icon"></i></a>
              <a href="/spots/{{spot.id}}/delete"><i class="trash alternate outline icon"></i></a>
            </span>
          </div>
          {{!-- main info --}}
          <p>{{spot.description}}</p>
          
          <div class="ui list">
            <div class="item">
              <i class="map marker alternate icon"></i>
              <div class="content">{{spot.location}}</div>
            </div>
          </div>
          <div class="ui label">
            <i class="tag icon"></i> {{spot.price_range}}
          </div>
          {{#if spot.category}}
            <div class="ui label">
              {{spot.category}}
            </div>
          {{/if}}
          {{!-- meta information --}}
          <div class="ui feed">
            <div class="event">
              <div class="label">
                <img src="/public/assets/images/avatar-2027367_640.png" alt="avatar image">
              </div>
              <div class="content">
                <div class="summary">
                  <a href="#" class="user">anonymous</a>
                  <div class="date">8 days ago</div>
                </div>
                <div class="meta">
                  <a href="#" class="like">
                    <i class="like icon"></i>23 likes
                  </a>
                  <a href="#" class="like">
                    <i class="comment outline icon"></i>42 comments
                  </a>
                </div>
              </div>
            </div>
          </div>
          {{!-- comments --}}
          <div class="ui threaded comments">
            <h3 class="ui dividing header">Comments</h3>
            <div class="comment">
              <a href="#" class="avatar">
                <img src="/public/assets/svg/avatar-male.svg" alt="avatar placeholder">
              </a>
              <div class="content">
                <a href="#" class="author">Mark</a>
                <div class="metadata">
                  <span class="date">Yesterday at 3:02PM</span>
                </div>
                <div class="text">This place looks awesome!</div>
                <div class="actions">
                  <a href="#" class="reply">Reply</a>
                </div>
              </div>
            </div>
            {{!---------------------------}}
            <div class="comment">
              <a href="#" class="avatar">
                <img src="/public/assets/svg/avatar-female.svg" alt="avatar placeholder">
              </a>
              <div class="content">
                <a href="#" class="author">Mark</a>
                <div class="metadata">
                  <span class="date">Yesterday at 3:02PM</span>
                </div>
                <div class="text">This place looks awesome!</div>
                <div class="actions">
                  <a href="#" class="reply">Reply</a>
                </div>
              </div>
            </div>

            {{!-- add comment form --}}
            <form action="" class="ui reply form">
              <div class="field">
                <textarea name="" id=""></textarea>
              </div>
            </form>

            <div class="btn-bottom">
              <div class="ui animated mini button" tabindex="0">
                <div class="visible content">Add comment</div>
                <div class="hidden content">
                  <i class="comment alternate outline icon"></i>
                </div>
              </div>
              <div class="ui animated mini button" tabindex="0">
                <a href="/spots">
                  <div class="visible content">Back</div>
                  <div class="hidden content">
                    <i class="angle double left icon"></i>
                  </div>
                </a>
              </div>
            </div>
          </div>

          {{else}}
            <h2 class="ui centered grey header">Not Found</h2>
          {{/if}}
        </div>
      </div>
      <div class="ten wide column">
        <img src="/public/assets/images/spot-cafe-3537801_640.jpg" alt="" class="ui fluid image">
      </div>
    </div>
  </section>
</div>