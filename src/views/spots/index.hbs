<header class="ui container">
  <div class="ui grid">
    <div class="four wide column">
      <div class="ui large vertical menu">
        <a class="active teal item">
          Featured
          <i class="star icon"></i>
        </a>
        <a class="item">
          Popular
          <i class="heart icon"></i>
        </a>
        <div class="ui dropdown item">
          Categories
          <i class="tags icon"></i>
          <div class="menu">
            <a class="item">Restaurant</a>
            <a class="item">Lounge</a>
            <a class="item">Bar</a>
            <a class="item">Mall</a>
            <a class="item">Beach</a>
            <a class="item">Eatery</a>
            <a class="item">Cinema</a>
            <a class="item">Park</a>
          </div>
        </div>
        <a class="item">
          By Location
          <i class="location arrow icon"></i>
        </a>
        <div class="item">
          <form action="/spots/search?search=name" method="post">
            <div class="ui icon input search">
              <input type="text" name="search" placeholder="Search locations...">
              <i class="circular search icon"></i>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="twelve wide stretched column">
      {{ displayFlashMessage success 'success'}}
      {{ displayFlashMessage error 'error'}}
      <div class="ui segment">
        <div class="header-container">
          <h1 class="ui header" id="header-message">Featured Locations</h1>
          <p class="header-sub--message"> <i class="angle double right icon"></i> Over <span>1000</span> locations with images, price range, ratings and reviews</p>
          <p class="header-sub--message"> <i class="angle double right icon"></i> <span>Filter</span> locations by category</p>
          <p class="header-sub--message"> <i class="angle double right icon"></i> <span>Search</span> for a familiar location and get similar results</p>
          <p class="header-sub--message"> <i class="angle double right icon"></i> <span>Sign up</span> and start posting awesome places you've been to!</p>
        </div>
      </div>
    </div>
  </div>
</header>

{{!-- display chill spot cards --}}
<section class="show-spots-grid">
  <div class="ui centered grid container">
    {{#each spots}}
    <div class="five wide column">
      <div class="ui card">
        <div class="content">
          <div class="right floated meta">14h</div>
          <img class="ui avatar image" src="/assets/images/avatar-2027367_640.png"> Elliot
        </div>
        <div class="image">
          <img src="/assets/images/spot-cafe-3537801_640.jpg">
        </div>
        <div class="content">
          <span class="right floated">
            <i class="heart outline like icon"></i>
            17 likes
          </span>
          <i class="comment icon"></i>
          3 comments
        </div>
        <div class="content">
          <a class="header">{{this.name}}</a>
          <div class="meta">
            <span class="right floated">$3.50 - $8.50</span>
            <span class="date">{{this.location}}</span>
          </div>
          <div class="description">
            {{this.description}}
          </div>
        </div>
        <div class="extra content">
          <div class="ui large transparent left icon input">
            <i class="comment alternate outline icon"></i>
            <input type="text" placeholder="share your thoughts...">
          </div>
          <div class="ui animated basic green mini button right floated" tabindex="0" data-content="View this chill spot" data-variation="tiny">
            <a href="/spots/{{this.id}}">
              <div class="visible content">View</div>
              <div class="hidden content">
                <i class="info circle icon"></i>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>