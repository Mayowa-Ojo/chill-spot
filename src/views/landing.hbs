  <header class="landing-header">
    <nav class="ui secondary menu">
      <div class="ui container">
        <a href="/spots" class="active item"><i class="hand point right outline icon"></i>Explore</a>
        <div class="right menu">
          <div class="item">
            <button class="ui inverted olive basic button"><a href="/users/register">Sign up</a></button>
